<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base theme -->
    <style name="Theme.VoltageAlert" parent="Theme.Material3.Light">
        <item name="colorPrimary">@color/danger_red</item>
        <item name="colorPrimaryVariant">@color/danger_red_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/warning_yellow</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowBackground">@color/background_main</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
    </style>

    <!-- Alert activity theme (full screen, no action bar) -->
    <style name="Theme.VoltageAlert.Alert" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:windowBackground">@color/background_alert</item>
        <item name="android:textColor">@color/text_on_alert</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowShowWallpaper">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
    </style>
</resources>
