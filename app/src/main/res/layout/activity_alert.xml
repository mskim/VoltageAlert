<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_alert"
    android:keepScreenOn="true">

    <!-- Alert Title -->
    <TextView
        android:id="@+id/tvAlertTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="32dp"
        android:text="@string/alert_danger"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/text_on_alert"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Warning Image -->
    <ImageView
        android:id="@+id/ivWarningImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/alert_warning"
        app:layout_constraintTop_toBottomOf="@id/tvAlertTitle"
        app:layout_constraintBottom_toTopOf="@id/tvAlertWarning"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Warning Text -->
    <TextView
        android:id="@+id/tvAlertWarning"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="32dp"
        android:text="@string/alert_warning"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/text_on_alert"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/btnDismiss"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Dismiss Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnDismiss"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="48dp"
        android:layout_marginEnd="48dp"
        android:layout_marginBottom="48dp"
        android:text="@string/alert_dismiss"
        android:textSize="20sp"
        android:textStyle="bold"
        app:backgroundTint="@color/white"
        app:cornerRadius="32dp"
        android:textColor="@color/danger_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
